      "source": [
        "def reverseWordSentence(Sentence):\n",
        "    words = Sentence.split(\" \")\n",
        "    newWords = [word[::-1] for word in words]\n",
        "    newSentence = \" \".join(newWords)\n",
        " \n",
        "    return newSentence\n",
        "\n",
        "Sentence = input('What sentence you want to reverse = ')\n",
        "print(reverseWordSentence(Sentence))"
      ]
